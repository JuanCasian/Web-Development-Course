<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header"> <%= blog.title %> </div>
    <div class="ui top attached">
      <div class="item">
        <img class="ui centered round image" src="<%= blog.image %>" >
        <div class="content">
          <span> <%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
          <p><%- blog.body %></p>
        </div>
        <form class="deleteMine" action="/blogs/<%=blog._id%>/edit" method="get">
          <button type="submit" class="ui violet basic button">UPDATE</button>
        </form>
        <form  class="deleteMine" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
          <button type="submit" class="ui red basic button">DELETE</button>
        </form>
      </div>
    </div>
</div>

<% include ./partials/footer %>
